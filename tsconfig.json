{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": false,
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "noImplicitAny": true,                  
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "exclude": [
    "src/frontend/*"
  ]
}
