{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "noImplicitAny": true,                  
    "skipLibCheck": true
  }
}
